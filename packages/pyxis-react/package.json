{
  "name": "@primauk/react",
  "version": "0.1.0",
  "private": false,
  "license": "ISC",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@primauk/icons": "^0.0.1",
    "@primauk/tokens": "0.0.1",
    "@rollup/plugin-alias": "^3.1.8",
    "@storybook/addon-docs": "^6.4.22",
    "@storybook/addon-storyshots": "^6.4.22",
    "@storybook/addon-storyshots-puppeteer": "^6.4.22",
    "@storybook/react": "^6.4.22",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "classnames": "^2.3.1",
    "html-entities": "^2.3.2",
    "postcss": "^8.4.4",
    "puppeteer": "^10.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^4.0.3",
    "shortid": "^2.2.16",
    "ts-node": "^10.4.0",
    "typescript": "^4.6.4",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "rollup -c",
    "generate:icons": "ts-node --project scripts/tsconfig.json ./scripts/generateIcons.ts",
    "lint": "eslint src/**/*.tsx",
    "lint:fix": "eslint src/**/*.tsx --fix",
    "start": "react-scripts start",
    "prestorybook": "yarn lint:fix",
    "component:generate": "generate-react component",
    "storybook:build": "build-storybook -s public",
    "storybook:serve": "start-storybook -p 6006 -s public",
    "storybook:test": "STORYBOOK_ENV=TEST start-storybook -p 6006 -s public",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --watchAll=false --coverage",
    "watch": "yarn build:esm --watch & yarn build:cjs --watch"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/components/**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/*.stories.{ts,tsx}"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.16.5",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@storybook/addon-a11y": "^6.4.22",
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-jest": "^6.4.22",
    "@storybook/addon-links": "^6.4.22",
    "@storybook/addons": "^6.4.22",
    "@storybook/node-logger": "^6.4.22",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/theming": "^6.4.22",
    "@types/shortid": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.0.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "generate-react-cli": "^7.0.6",
    "jest-config": "^27.4.5",
    "rollup": "^2.60.1",
    "rollup-plugin-dts": "^4.0.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.43.2"
  },
  "peerDependencies": {
    "@primauk/scss": "0.0.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
